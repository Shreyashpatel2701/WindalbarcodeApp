<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView

        android:layout_marginTop="120dp"
        android:textColor="#000000"
        android:text="Date"
        android:textSize="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>
    <EditText
        android:id="@+id/filledTextField_email"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Date"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/ic_date"
        >

    </EditText>



    <TextView
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:text="Vehicle Number"
        android:textSize="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>

    <EditText
        android:id="@+id/Vehicle_number"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edit"
        android:drawableStart="@drawable/password"
        android:hint="Vehicle number"
        android:inputType="textPassword"
        android:padding="8dp" />


+

    <TextView
        android:id="@+id/invoice_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:text="Invoice Number"
        android:textColor="@color/colorBlack" />

    <EditText
        android:id="@+id/invoice_number"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edit"
        android:drawableStart="@drawable/password"
        android:hint="Invoice number"
        android:inputType="textPassword"
        android:padding="8dp" />
    <TextView
        android:id="@+id/parts_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:text="Select Parts"
        android:textColor="@color/colorBlack" />

    <Spinner
        android:layout_marginTop="8dp"
        android:id="@+id/parts_spinner"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        tools:ignore="SpeakableTextPresentCheck"></Spinner>

    <Button
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="30dp"
        android:background="@color/white"
        android:text="Continue"
        android:textColor="#D32F2F"></Button>


</LinearLayout>